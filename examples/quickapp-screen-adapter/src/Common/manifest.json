{
    "package": "com.application.demo",
    "name": "demo5",
    "versionName": "1.0.0",
    "versionCode": "1",
    "minPlatformVersion": "1020",
    "icon": "/Common/logo.png",
    "features": [
        { "name": "system.prompt" },
        { "name": "system.router" },
        { "name": "system.shortcut" }
    ],
    "permissions": [
        { "origin": "*" }
    ],
    "config": {
        "logLevel": "log"
    },
    "router": {
        "entry": "mediaQuery",
        "pages": {
            "mediaQuery": {
                "component": "index"
            }
        },
        "widgets": {
            "CardDemo": {
                "name": "CardDemo",
                "description": "快应用卡片展示",
                "component": "index",
                "path": "/CardDemo",
                "features": []
            }
        }
    },
    "display": {
        "titleBar": true,
        "orientation": "landscape",
        "titleBarBackgroundColor": "#f2f2f2",
        "titleBarTextColor": "#414141",
        "menu": true,
        "pages": {
            "mediaQuery": {
                "titleBarText": "媒体查询",
                "menu": false
            }
        }
    }
}